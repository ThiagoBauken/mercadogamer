# ===========================================
# MercadoGamer Backend - Environment Variables
# ===========================================
# Copie este arquivo para .env e preencha com suas credenciais

# Database
MONGO_USER=admin
MONGO_PASSWORD=your_password_here
DATABASE_HOST=mongodb:27017
DATABASE_NAME=mercadogamer

# Server
NODE_ENV=development
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
PORT=3000
SOCKET_SERVER_URL=http://localhost:3000

# Directories
UPLOAD_DIR=/app/uploads
IMAGES_DIR=/app/files

# Email (SMTP)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@mercadogamer.com

# MercadoPago
MP_ACCESS_TOKEN=your_mercadopago_token_here

# Stripe
STRIPE_KEY=your_stripe_key_here

# Twilio (Optional - for SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# IMPORTANT: NEVER commit the .env file with real credentials!
# Add .env to .gitignore to prevent accidental commits

{
  "verbose": false,
  "watch": [
    "index.js",
    "app.js",
    "routes/**/*.js",
    "modules/**/*.js",
    "helpers/**/*.js",
    "config/**/*.js",
    "utils/**/*.js"
  ],
  "ignore": [
    "node_modules/**",
    "files/**",
    "uploads/**",
    "tmp/**",
    "*.log",
    ".git/**",
    "test/**",
    "tests/**",
    "**/*.csv",
    "**/*.json",
    ".env",
    ".env.*",
    "scripts/**"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js",
  "delay": "2000"
}
